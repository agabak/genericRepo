@model UserViewModel

<div class="container">
    <h1>Detail</h1>
    <form asp-action="Create" asp-controller="Home">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" disabled />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" disabled/>
            <span asp-validation-for="LastName" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled/>
            <span asp-validation-for="Username" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled />
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
    </form>
</div>

