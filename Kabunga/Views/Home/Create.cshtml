@model CreateUserViewModel
@inject IConfiguration  configuration

<div class="container">
    <h1>Register new user @configuration.GetSection("Colors:Favourite")</h1>
    <form asp-action="Create" asp-controller="Home">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailConfirm"></label>
            <input asp-for="EmailConfirm" class="form-control" />
            <span asp-validation-for="EmailConfirm" class="alert-danger"></span>
        </div>
        <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Cancel >></a>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>

