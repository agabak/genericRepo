@model IEnumerable<UserViewModel>


<div class="container">
    <div>
        <h1>List of user</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Detail" asp-controller="Home" asp-route-id="@user.Id">Detail</a>
                    </td>
                    <td>
                        <a class="btn btn-success"
                           asp-action="Update" asp-controller="Home" asp-route-id="@user.Id">Edit</a>
                    </td>
                </tr>
            }
</table>
</div>