@model  IEnumerable<UserViewModel>


<div class="container">
    <div>
        <h1>List of user</h1>
    </div>
    @foreach(var user in Model)
    {
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@user.Username</h5>
            <h6 class="card-subtitle mb-2 text-muted">@user.FirstName</h6>
            <h6 class="card-subtitle mb-2 text-muted">@user.LastName</h6>
            <a class="btn btn-primary"
               asp-action="Update" asp-controller="Home" asp-route-id="@user.Id">Edit</a>
            <a class="btn btn-primary"
               asp-action="Detail" asp-controller="Home" asp-route-id="@user.Id">Detail</a>
        </div>
    </div>
    }
</div>